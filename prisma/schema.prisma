// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")

    relationMode = "prisma"
}

model Restaurant {
    id                    String   @unique @default(cuid())
    userId                String
    createdAt             DateTime @default(now())
    updatedAt             DateTime @updatedAt
    name                  String
    location              String
    contactNo             String
    isPublished           Boolean
    privacyPolicyUrl      String?  // Optional URL to venue-specific privacy policy
    termsAndConditionsUrl String?  // Optional URL to venue-specific terms & conditions
    menus                 Menu[]   @relation("MenusOfRestaurant")
    image                 Image?   @relation("ImageOfRestaurant", fields: [imageId], references: [id], onDelete: SetNull, onUpdate: SetNull)
    imageId               String?  @unique
    banners               Image[]  @relation("BannersOfRestaurant")

    @@id([id, userId])
    @@index([isPublished])
}

enum ReservationType {
    NONE     // No reservations
    EXTERNAL // External URL
    FORM     // Built-in reservation form
}

enum MenuType {
    INTERNAL // Internal menu (displayed on Menufic)
    EXTERNAL // External menu (redirect to external URL)
}

enum ContactPreference {
    PHONE    // Prefer phone call
    WHATSAPP // Prefer WhatsApp
    EMAIL    // Prefer email
}

model Menu {
    id                      String              @unique @default(cuid())
    userId                  String
    createdAt               DateTime            @default(now())
    updatedAt               DateTime            @updatedAt
    name                    String
    availableTime           String
    telephone               String?
    email                   String?
    reservations            String?             // URL for external reservations (deprecated, use reservationType)
    message                 String?
    position                Int
    isTemporary             Boolean             @default(false) // Whether this is a temporary menu
    startDate               DateTime?           // Start date for temporary menus
    endDate                 DateTime?           // End date for temporary menus (menu becomes disabled after this)
    isFestive               Boolean             @default(false) // Whether this is a festive/special menu (highlighted with emoji)
    isActive                Boolean             @default(true)  // Whether menu is currently active (auto-disabled when past endDate)
    menuType                MenuType            @default(EXTERNAL) // Whether menu is internal or external (defaults to EXTERNAL)
    externalUrl             String?             // External URL (when menuType = EXTERNAL)
    // Schedule fields (for repeating menus)
    scheduleType            BannerScheduleType  @default(ALWAYS) // When to display the menu
    dailyStartTime          String?             // Start time for daily display (HH:mm)
    dailyEndTime            String?             // End time for daily display (HH:mm)
    weeklyDays              Int[]               @default([]) // Days of week to display (0=Sunday, 6=Saturday)
    monthlyDays             Int[]               @default([]) // Days of month to display (1-31)
    monthlyWeekday          Int?                // Day of week for monthly recurring (0=Sunday, 6=Saturday) - e.g., "every Monday" (legacy, use monthlyWeekdayRules)
    monthlyWeekdayOrdinal   Int?                // Which occurrence in month (1=first, 2=second, 3=third, 4=fourth, -1=last) - e.g., "first Monday" (legacy, use monthlyWeekdayRules)
    monthlyWeekdayRules     Json?               // Array of {weekday, ordinal} objects for multiple rules - e.g., [{weekday: 2, ordinal: 1}, {weekday: 2, ordinal: 3}] for "1st and 3rd Tuesday"
    yearlyStartDate         String?             // Start date for yearly display (MM-DD)
    yearlyEndDate           String?             // End date for yearly display (MM-DD)
    periodStartDate         DateTime?           // Start date for period display
    periodEndDate           DateTime?           // End date for period display
    // New reservation system fields
    reservationType         ReservationType     @default(NONE) // Type of reservation system
    reservationUrl          String?             // External reservation URL (when reservationType = EXTERNAL)
    reservationEmail        String?             // Email to send reservation requests (when reservationType = FORM)
    reservationStartTime    String?             // Start time for reservations (e.g., "10:00")
    reservationEndTime      String?             // End time for reservations (e.g., "22:00")
    reservationMaxPartySize Int?                // Maximum party size allowed
    reservationSlotDuration Int?                @default(30) // Duration of each reservation slot in minutes
    categories              Category[]          @relation("CategoriesOfMenu")
    packs                   Pack[]              @relation("PacksOfMenu")
    restaurant              Restaurant?         @relation("MenusOfRestaurant", fields: [restaurantId], references: [id])
    restaurantId            String?

    @@id([id, userId])
    @@index([restaurantId])
    @@index([isActive, endDate])
}

model Category {
    id        String     @unique @default(cuid())
    userId    String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    name      String
    position  Int
    items     MenuItem[] @relation("MenuItemsOfCategory")
    menu      Menu?      @relation("CategoriesOfMenu", fields: [menuId], references: [id])
    menuId    String?

    @@id([id, userId])
    @@index([menuId])
}

model MenuItem {
    id             String    @unique @default(cuid())
    userId         String
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    name           String
    description    String
    price          String
    currency       String    @default("€")
    vatRate        Int       @default(23) // VAT percentage: 6, 13, or 23
    vatIncluded    Boolean   @default(true) // Whether VAT is included in the price
    isEdible       Boolean   @default(false) // Whether this is an edible product
    allergens      String[]  @default([]) // List of allergen codes (portuguese law requires 14 allergens)
    position       Int
    category       Category? @relation("MenuItemsOfCategory", fields: [categoryId], references: [id])
    categoryId     String?
    image          Image?    @relation("ImageOfMenuItem", fields: [imageId], references: [id])
    imageId        String?   @unique

    @@id([id, userId])
    @@index([categoryId])
}

enum BannerScheduleType {
    ALWAYS      // Always display (default)
    DAILY       // Display daily within time range
    WEEKLY      // Display on specific days of week
    MONTHLY     // Display on specific days of month
    YEARLY      // Display within specific date range each year
    PERIOD      // Display within specific start-end date period
}

model Image {
    id               String              @unique
    path             String
    blurHash         String
    color            String
    isAiGenerated    Boolean             @default(false)
    expiryDate       DateTime?           // Optional expiry date for banners (null = no expiry)
    // Banner scheduling fields
    scheduleType     BannerScheduleType  @default(ALWAYS)
    // Daily schedule: start and end time (e.g., "09:00", "18:00")
    dailyStartTime   String?
    dailyEndTime     String?
    // Weekly schedule: days of week (0=Sunday, 1=Monday, ..., 6=Saturday)
    weeklyDays       Int[]               @default([])
    // Monthly schedule: days of month (1-31)
    monthlyDays      Int[]               @default([])
    // Monthly weekday schedule: e.g., "first Monday of month"
    monthlyWeekday          Int?         // Day of week (0=Sunday, 6=Saturday) (legacy, use monthlyWeekdayRules)
    monthlyWeekdayOrdinal   Int?         // Which occurrence (1=first, 2=second, 3=third, 4=fourth, -1=last) (legacy, use monthlyWeekdayRules)
    monthlyWeekdayRules     Json?        // Array of {weekday, ordinal} objects for multiple rules
    // Yearly schedule: start and end dates (MM-DD format, e.g., "12-24", "01-06")
    yearlyStartDate  String?
    yearlyEndDate    String?
    // Period schedule: specific start and end dates
    periodStartDate  DateTime?
    periodEndDate    DateTime?
    menuItem         MenuItem?           @relation("ImageOfMenuItem")
    pack             Pack?               @relation("ImageOfPack")
    restaurant       Restaurant?         @relation("ImageOfRestaurant")
    restaurantBanner Restaurant?         @relation("BannersOfRestaurant", fields: [restaurantId], references: [id], onDelete: Restrict, onUpdate: Restrict)
    restaurantId     String?

    @@index([restaurantId])
    @@index([expiryDate])
    @@index([scheduleType])
}

model Pack {
    id           String       @unique @default(cuid())
    userId       String
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt
    name         String       // e.g., "Christmas Day"
    description  String?      @db.Text // Optional description
    price        String       // Fixed price for the pack
    currency     String       @default("€")
    vatRate      Int          @default(23) // VAT percentage
    vatIncluded  Boolean      @default(true) // Whether VAT is included in price
    position     Int          // Display order
    isActive     Boolean      @default(true) // Whether pack is available
    sections     PackSection[] @relation("PackSections")
    menu         Menu?        @relation("PacksOfMenu", fields: [menuId], references: [id])
    menuId       String?
    image        Image?       @relation("ImageOfPack", fields: [imageId], references: [id])
    imageId      String?      @unique

    @@id([id, userId])
    @@index([menuId])
}

model PackSection {
    id             String   @unique @default(cuid())
    userId         String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    title          String   // e.g., "COLD DISHES", "HOT DISHES"
    items          String[] // Array of item descriptions
    itemAllergens  Json?    @default("{}") // Map of item text to allergen codes array (AI-generated)
    position       Int      // Display order within pack
    pack           Pack?    @relation("PackSections", fields: [packId], references: [id], onDelete: Cascade)
    packId         String?

    @@id([id, userId])
    @@index([packId])
}

model Translation {
    id         String   @id @default(cuid())
    entityType String   // 'menuItem', 'category', 'menu', 'pack', 'packSection'
    entityId   String   // ID of the item being translated
    language   String   // 'pt', 'es', 'fr', 'de', etc.
    field      String   // 'name', 'description', 'availableTime', 'message', 'title'
    translated String   @db.Text
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@unique([entityType, entityId, language, field])
    @@index([entityType, entityId, language])
}

// Analytics: Track page views for restaurants (detailed, kept for retention period then purged)
model PageView {
    id           String   @id @default(cuid())
    restaurantId String   // ID of the restaurant being viewed
    ip           String?  // Visitor IP (anonymized - last octet removed for privacy)
    country      String?  // Country code from CF-IPCountry header
    userAgent    String?  // Browser user agent
    referer      String?  // Referring URL
    path         String   // Page path (e.g., "/venue/abc123/menu")
    createdAt    DateTime @default(now())

    @@index([restaurantId])
    @@index([createdAt])
    @@index([restaurantId, createdAt])
}

// Analytics: Aggregated daily stats (kept long-term, smaller footprint)
model DailyStats {
    id             String   @id @default(cuid())
    restaurantId   String   // ID of the restaurant
    date           DateTime @db.Date // The day (date only, no time)
    totalViews     Int      @default(0) // Total page views that day
    uniqueVisitors Int      @default(0) // Unique visitors (by IP) that day
    // Country breakdown stored as JSON: { "PT": 10, "US": 5, ... }
    countryStats   Json?
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@unique([restaurantId, date])
    @@index([restaurantId])
    @@index([date])
}
