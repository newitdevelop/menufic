// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")

    relationMode = "prisma"
}

model Restaurant {
    id                    String   @unique @default(cuid())
    userId                String
    createdAt             DateTime @default(now())
    updatedAt             DateTime @updatedAt
    name                  String
    location              String
    contactNo             String
    isPublished           Boolean
    privacyPolicyUrl      String?  // Optional URL to venue-specific privacy policy
    termsAndConditionsUrl String?  // Optional URL to venue-specific terms & conditions
    menus                 Menu[]   @relation("MenusOfRestaurant")
    image                 Image?   @relation("ImageOfRestaurant", fields: [imageId], references: [id], onDelete: SetNull, onUpdate: SetNull)
    imageId               String?  @unique
    banners               Image[]  @relation("BannersOfRestaurant")

    @@id([id, userId])
    @@index([isPublished])
}

model Menu {
    id            String      @unique @default(cuid())
    userId        String
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
    name          String
    availableTime String
    telephone     String?
    email         String?
    reservations  String?     // URL for reservations
    message       String?
    position      Int
    isTemporary   Boolean     @default(false) // Whether this is a temporary menu
    startDate     DateTime?   // Start date for temporary menus
    endDate       DateTime?   // End date for temporary menus (menu becomes disabled after this)
    isFestive     Boolean     @default(false) // Whether this is a festive/special menu (highlighted with emoji)
    isActive      Boolean     @default(true)  // Whether menu is currently active (auto-disabled when past endDate)
    categories    Category[]  @relation("CategoriesOfMenu")
    packs         Pack[]      @relation("PacksOfMenu")
    restaurant    Restaurant? @relation("MenusOfRestaurant", fields: [restaurantId], references: [id])
    restaurantId  String?

    @@id([id, userId])
    @@index([restaurantId])
    @@index([isActive, endDate])
}

model Category {
    id        String     @unique @default(cuid())
    userId    String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    name      String
    position  Int
    items     MenuItem[] @relation("MenuItemsOfCategory")
    menu      Menu?      @relation("CategoriesOfMenu", fields: [menuId], references: [id])
    menuId    String?

    @@id([id, userId])
    @@index([menuId])
}

model MenuItem {
    id             String    @unique @default(cuid())
    userId         String
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    name           String
    description    String
    price          String
    currency       String    @default("€")
    vatRate        Int       @default(23) // VAT percentage: 6, 13, or 23
    vatIncluded    Boolean   @default(true) // Whether VAT is included in the price
    isEdible       Boolean   @default(false) // Whether this is an edible product
    allergens      String[]  @default([]) // List of allergen codes (portuguese law requires 14 allergens)
    position       Int
    category       Category? @relation("MenuItemsOfCategory", fields: [categoryId], references: [id])
    categoryId     String?
    image          Image?    @relation("ImageOfMenuItem", fields: [imageId], references: [id])
    imageId        String?   @unique

    @@id([id, userId])
    @@index([categoryId])
}

model Image {
    id               String      @unique
    path             String
    blurHash         String
    color            String
    isAiGenerated    Boolean     @default(false)
    menuItem         MenuItem?   @relation("ImageOfMenuItem")
    pack             Pack?       @relation("ImageOfPack")
    restaurant       Restaurant? @relation("ImageOfRestaurant")
    restaurantBanner Restaurant? @relation("BannersOfRestaurant", fields: [restaurantId], references: [id], onDelete: Restrict, onUpdate: Restrict)
    restaurantId     String?

    @@index([restaurantId])
}

model Pack {
    id           String       @unique @default(cuid())
    userId       String
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt
    name         String       // e.g., "Christmas Day"
    description  String?      @db.Text // Optional description
    price        String       // Fixed price for the pack
    currency     String       @default("€")
    vatRate      Int          @default(23) // VAT percentage
    vatIncluded  Boolean      @default(true) // Whether VAT is included in price
    position     Int          // Display order
    isActive     Boolean      @default(true) // Whether pack is available
    sections     PackSection[] @relation("PackSections")
    menu         Menu?        @relation("PacksOfMenu", fields: [menuId], references: [id])
    menuId       String?
    image        Image?       @relation("ImageOfPack", fields: [imageId], references: [id])
    imageId      String?      @unique

    @@id([id, userId])
    @@index([menuId])
}

model PackSection {
    id             String   @unique @default(cuid())
    userId         String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    title          String   // e.g., "COLD DISHES", "HOT DISHES"
    items          String[] // Array of item descriptions
    itemAllergens  Json?    @default("{}") // Map of item text to allergen codes array (AI-generated)
    position       Int      // Display order within pack
    pack           Pack?    @relation("PackSections", fields: [packId], references: [id], onDelete: Cascade)
    packId         String?

    @@id([id, userId])
    @@index([packId])
}

model Translation {
    id         String   @id @default(cuid())
    entityType String   // 'menuItem', 'category', 'menu', 'pack', 'packSection'
    entityId   String   // ID of the item being translated
    language   String   // 'pt', 'es', 'fr', 'de', etc.
    field      String   // 'name', 'description', 'availableTime', 'message', 'title'
    translated String   @db.Text
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    @@unique([entityType, entityId, language, field])
    @@index([entityType, entityId, language])
}
